<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.bekci.agent</string>

    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/bekci</string>
        <string>--config</string>
        <string>/etc/bekci/config.yaml</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/var/log/bekci/bekci.log</string>

    <key>StandardErrorPath</key>
    <string>/var/log/bekci/bekci.error.log</string>

    <key>WorkingDirectory</key>
    <string>/etc/bekci</string>
</dict>
</plist>
